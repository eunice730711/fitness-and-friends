<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Position"
        android:text="# "
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#2b323d"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/show_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:layout_toRightOf="@+id/slash2"
        android:text="Type"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#2b323d"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="3dp"
        android:text="time"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#2b323d"
        android:textSize="18dp"
        android:layout_alignTop="@+id/show_date"
        android:layout_toEndOf="@+id/show_date" />

    <TextView
        android:id="@+id/slash2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# "
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#2b323d"
        android:textSize="18dp"
        android:layout_below="@+id/slash"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/show_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:text="date"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#2b323d"
        android:textSize="18dp"
        android:layout_alignBaseline="@+id/slash2"
        android:layout_alignBottom="@+id/slash2"
        android:layout_toEndOf="@+id/slash2" />

    <TextView
        android:id="@+id/show_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Location"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#2b323d"
        android:textSize="18dp"
        android:layout_below="@+id/mark"
        android:layout_toEndOf="@+id/slash" />

    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#2b323d"
        android:textSize="18dp"
        android:layout_alignBaseline="@+id/show_pos"
        android:layout_alignBottom="@+id/show_pos"
        android:layout_alignParentStart="true" />
</RelativeLayout>
