<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.google.firebase.codelab.friendlychat.SearchUser">

    <Button
        android:text="send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="97dp"
        android:id="@+id/btn_search_send" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_searchId"
        android:layout_alignTop="@+id/btn_search_send"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <Button
        android:text="setUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_search_send"
        android:layout_alignStart="@+id/btn_search_send"
        android:layout_marginTop="73dp"
        android:id="@+id/btn_setProfile" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_id"
        android:layout_below="@+id/btn_setProfile"
        android:layout_alignStart="@+id/txt_searchId"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txt_username"
        android:layout_above="@+id/txt_id"
        android:layout_alignStart="@+id/txt_id" />

    <TextView
        android:text="Search users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_searchId"
        android:layout_alignStart="@+id/txt_searchId"
        android:layout_marginStart="21dp"
        android:id="@+id/textView" />

    <TextView
        android:text="User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_setProfile"
        android:layout_alignStart="@+id/txt_username"
        android:id="@+id/textView3" />

    <TextView
        android:text="id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_id"
        android:layout_alignStart="@+id/txt_id"
        android:id="@+id/textView4" />
</RelativeLayout>
