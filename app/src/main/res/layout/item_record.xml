<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="5'12''/ km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_recordRate"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/txt_recordDist"
        android:layout_marginStart="60dp" />

    <TextView
        android:text="31:21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:id="@+id/txt_recordTime"
        android:layout_alignBaseline="@+id/txt_recordRate"
        android:layout_alignBottom="@+id/txt_recordRate"
        android:layout_toEndOf="@+id/txt_recordRate" />

    <TextView
        android:text="3.68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_recordDist"
        android:textSize="36sp"
        android:layout_alignBaseline="@+id/txt_recordRate"
        android:layout_alignBottom="@+id/txt_recordRate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:text="km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_alignBaseline="@+id/txt_recordDist"
        android:layout_alignBottom="@+id/txt_recordDist"
        android:layout_toEndOf="@+id/txt_recordDist"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:text="2016/10/20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_recordDate"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />
    <View
        android:background="#DEDEDE"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/txt_recordDist"
        android:layout_height="1dp"
        android:layout_width="fill_parent"/>

</RelativeLayout>
</LinearLayout>
