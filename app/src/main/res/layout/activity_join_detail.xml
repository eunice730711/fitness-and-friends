<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_join__detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.google.firebase.codelab.friendlychat.Join_Detail">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Detail_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_account_circle_black_36dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true" />


    <TextView
        android:text="name"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Detail_Name"
        android:layout_alignTop="@+id/Detail_photo"
        android:layout_toRightOf="@+id/Detail_photo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:text="date"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Detail_Date"
        android:layout_alignLeft="@+id/Detail_Name"
        android:layout_below="@+id/Detail_Name"/>

    <TextView
        android:text="time"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Detail_Time"
        android:layout_toRightOf="@+id/Detail_Date"
        android:layout_marginLeft="3dp"
        android:layout_below="@+id/Detail_Name"
        android:visibility="gone"/>

    <TextView
        android:text="title"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Detail_Title"
        android:layout_below="@+id/Detail_photo"
        android:layout_alignParentStart="true"
        android:paddingLeft="35dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:text="jposition"
        android:textSize="20dp"
        android:textColor="#64dd3b"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Detail_JPos"
        android:layout_below="@+id/Detail_photo"
        android:layout_toRightOf="@+id/Detail_Title"
        android:layout_marginTop="15dp"
        android:paddingLeft="7dp"/>

    <TextView
        android:text="jdate"
        android:textSize="18dp"
        android:textColor="#dd693b"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Detail_JDate"
        android:layout_below="@+id/Detail_JPos"
        android:layout_alignLeft="@+id/Detail_Title"
        android:layout_marginTop="5dp"
        android:paddingLeft="35dp" />

    <TextView
        android:text="jtime"
        android:textSize="18dp"
        android:textColor="#dd693b"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Detail_JTime"
        android:layout_below="@+id/Detail_JPos"
        android:layout_toRightOf="@+id/Detail_JDate"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp" />


    <TextView
        android:text="text~~"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/Detail_Text"
        android:paddingTop="10dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_below="@+id/Detail_JDate"
        android:layout_alignParentStart="true" />


</RelativeLayout>
